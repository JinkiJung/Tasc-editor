{
  "title": "Tasc scenario",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string",
      "options": {
        "inputAttributes": {
          "placeholder": "Enter name"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "options": {
        "inputAttributes": {
          "placeholder": "Enter description"
        }
      }
    },
    "terminuses": {
      "title": "Actors",
      "type": "array",
      "items": {
        "$ref": "#/definitions/terminus"
      }
    },
    "actions": {
      "title": "Actions",
      "type": "array",
      "items": {
        "$ref" : "#/definitions/action"
      }
    },
    "conditions": {
      "title": "Conditions",
      "type": "array",
      "items": {
        "$ref" : "#/definitions/condition"
      }
    },
    "interfaces": {
      "title": "Interfaces",
      "type": "array",
      "items": {
        "$ref" : "#/definitions/interface"
      }
    },
    "scenario": {
      "title": "Scenario",
      "type": "array",
      "items": {
        "$ref": "#/definitions/tasc"
      }
    }
  },
  "definitions": {
    "condition": {
      "title": "Condition",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "state": {
          "$ref": "#/definitions/state"
        },
        "timeState": {
          "type": "string"
        },
        "isSatisfied": {
          "type": "boolean"
        },
        "and": {
          "description": "other condition's ID",
          "type": "string"
        },
        "or": {
          "description": "other condition's ID",
          "type": "string"
        },
        "target": {
          "$ref": "#/definitions/terminus"
        }
      }
    },
    "state": {
      "title": "State",
      "type": "object",
      "properties": {
        "type": {
          "title": "State type",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter a state type"
            }
          }
        }
      }
    },
    "terminus":{
      "title": "Terminus",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string"
        },
        "name": {
          "title": "name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter name"
            }
          }
        },
        "location": {
          "title": "location",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter location"
            }
          }
        },
        "role": {
          "title": "as a",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter role"
            }
          }
        }
      }
    },
    "action":{
      "title": "Action",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter an action ID"
            }
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter name"
            }
          }
        },
        "target": {
          "$ref": "#/definitions/terminus"
        },
        "measurements": {
          "title": "Measurements",
          "type": "array",
          "items": {
            "$ref": "#/definitions/measurement"
          }
        }
      }
    },
    "measurement": {
      "title": "Measurement",
      "type": "object",
      "properties": {
        "eqid": {
          "title": "Equation identifier",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter an equation identifier of measurement"
            }
          }
        },
        "state": {
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter State type"
            }
          }
        }
      }
    },
    "context": {
      "title": "Context",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Given..."
            }
          }
        }
      }
    },
    "information": {
      "type" : "object",
      "properties" : {
        "context" : {
          "type" : "string"
        },
        "content" : {
          "type" : "string"
        }
      }
    },
    "interface": {
      "type" : "object",
      "properties" : {
        "name" : {
          "type" : "string"
        }
      }
    },
    "instruction": {
      "title": "Instruction",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter name"
            }
          }
        },
        "context": {
          "title": "Context",
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["none", "tutorial", "training","testing","assessment","simulation"]
          }
        },
        "informationContainer": {
          "title": "Interface and Information",
          "type": "array",
          "items": {
            "type" : "object",
            "additionalProperties" : {
              "type" : "object",
              "required" : [
                "interfaceID",
                "informationID"
              ],
              "properties" : {
                "interfaceID" : {
                  "type" : "string"
                },
                "informationID" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    },
    "flow": {
      "title": "Flow",
      "type": "object",
      "properties": {
        "equation": {
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter TeX equation with measurement identifier"
            }
          }
        },
        "priority": {
          "type": "integer"
        },
        "feedback": {
          "$ref": "#/definitions/feedback"
        },
        "next": {
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter Tasc ID"
            }
          }
        }
      }
    },
    "feedback": {
      "title": "Feedback",
      "type": "object",
      "properties": {
        "interface": {
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter type of Interface"
            }
          }
        },
        "effect": {
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter effect type"
            }
          }
        },
        "duration": {
          "type": "number",
          "options": {
            "inputAttributes": {
              "placeholder": "How long the effect will stay? (in sec)"
            }
          }
        },
        "interactive": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/flow"
          }
        }
      }
    },
    "tasc": {
      "title": "Tasc",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string",
          "propertyOrder": 1,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter ID"
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "propertyOrder": 2,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter name"
          }
        },
        "desc": {
          "title": "Description",
          "type": "string",
          "propertyOrder": 3,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter description"
          }
        },
        "given": {
          "title": "Given",
          "type" : "array",
          "propertyOrder": 4,
          "items": {
            "$ref": "#/definitions/context"
          },
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter contexts"
          }
        },
        "when": {
          "title": "When",
          "$ref": "#/definitions/condition",
          "propertyOrder": 5,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter starting condition"
          }
        },
        "who": {
          "title": "Who",
          "$ref": "#/definitions/terminus",
          "propertyOrder": 6,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter contexts"
          }
        },
        "do": {
          "title": "Do",
          "$ref": "#/definitions/action",
          "propertyOrder": 7,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter action"
          }
        },
        "follow": {
          "title": "Follow",
          "type": "array",
          "items": {
            "$ref": "#/definitions/instruction"
          },
          "propertyOrder": 8,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter instruction"
          }
        },
        "before": {
          "title": "Before",
          "$ref": "#/definitions/condition",
          "propertyOrder": 9,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter termination condition"
          }
        },
        "then": {
          "title": "Then",
          "type": "array",
          "items": {
            "$ref": "#/definitions/flow"
          },
          "propertyOrder": 10,
          "tasc-editor-form": {
            "type": "textarea",
            "placeholder": "Enter flow"
          }
        },
        "metadata": {
          "title": "Metadata",
          "type": "object",
          "format": "table",
          "properties": {
            "priority": {
              "title": "Priority",
              "type": "number"
            },
            "importance": {
              "title": "Importance",
              "type": "number"
            },
            "difficulty": {
              "title": "Difficulty",
              "type": "number"
            },
            "estimatedTime": {
              "title": "Estimated Time (sec)",
              "type": "number"
            }
          },
          "propertyOrder": 12
        }
      }
    }
  }
}