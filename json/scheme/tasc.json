{
  "title": "Tasc scenario",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string",
      "options": {
        "inputAttributes": {
          "placeholder": "Enter a scenario name"
        }
      }
    },
    "scenario": {
      "title": "Scenario",
      "type": "array",
      "items": {
        "$ref": "#/definitions/tasc"
      }
    }
  },
  "definitions": {
    "condition": {
      "title": "Condition",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "state": {
          "$ref": "#/definitions/state"
        },
        "and": {
          "type": "string"
        },
        "or": {
          "type": "string"
        },
        "target": {
          "$ref": "#/definitions/terminus"
        }
      }
    },
    "state": {
      "title": "State",
      "type": "object",
      "properties": {
        "type": {
          "title": "State type",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter a state type"
            }
          }
        }
      }
    },
    "terminus":{
      "title": "Terminus",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string"
        },
        "name": {
          "title": "name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter name"
            }
          }
        },
        "role": {
          "title": "as a",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter role"
            }
          }
        }
      }
    },
    "action":{
      "title": "Action",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter an action ID"
            }
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter name"
            }
          }
        },
        "target": {
          "$ref": "#/definitions/terminus"
        }
      }
    },
    "context": {
      "title": "Context",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Given..."
            }
          }
        }
      }
    },
    "instruction": {
      "title": "Instruction",
      "type": "object",
      "properties": {
        "context": {
          "$ref" : "#/definitions/context"
        },
        "name": {
          "title": "Name",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter instruction"
            }
          }
        }
      }
    },
    "evaluation": {
      "title": "Evaluation",
      "type": "object",
      "properties": {
        "measurement": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "tasc": {
      "title": "Tasc",
      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "string",
          "propertyOrder": 4,
          "options": {
            "inputAttributes": {
              "placeholder": "Enter ID"
            }
          }
        },
        "title": {
          "title": "Title",
          "type": "string",
          "propertyOrder": 1,
          "options": {
            "inputAttributes": {
              "placeholder": "Enter a title"
            }
          }
        },
        "desc": {
          "title": "Description",
          "type": "string",
          "options": {
            "inputAttributes": {
              "placeholder": "Enter description"
            }
          },
          "propertyOrder": 2
        },
        "given": {
          "title": "Given",
          "$ref": "#/definitions/context",
          "propertyOrder": 2
        },
        "until": {
          "title": "Until",
          "$ref": "#/definitions/condition",
          "propertyOrder": 9
        },
        "when": {
          "title": "When",
          "$ref": "#/definitions/condition",
          "propertyOrder": 5
        },
        "who": {
          "title": "Who",
          "$ref": "#/definitions/terminus",
          "propertyOrder": 6
        },
        "do": {
          "title": "Do",
          "$ref": "#/definitions/action",
          "propertyOrder": 7
        },
        "following": {
          "title": "Following",
          "$ref": "#/definitions/instruction",
          "propertyOrder": 8
        },
        "should": {
          "title": "Should",
          "$ref": "#/definitions/evaluation",
          "propertyOrder": 9
        },
        "priority": {
          "title": "Priority",
          "type": "object",
          "format": "table",
          "properties": {
            "priority": {
              "title": "Priority",
              "type": "number"
            },
            "importance": {
              "title": "Importance",
              "type": "number"
            },
            "difficulty": {
              "title": "Difficulty",
              "type": "number"
            },
            "estimatedTime": {
              "title": "Estimated Time (sec)",
              "type": "number"
            }
          },
          "propertyOrder": 12
        },
        "next": {
          "title": "Next",
          "type": "array",
          "items": {
            "type": "string"
          },
          "propertyOrder": 10
        }
      }
    }
  }
}